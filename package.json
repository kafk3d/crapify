{
  "name": "crapify-tools",
  "version": "1.0.0",
  "description": "Ultra-fast developer productivity tools for code cleanup and optimization",
  "private": true,
  "scripts": {
    "build": "npm run build:shared && npm run build:comments",
    "build:shared": "cd packages/shared && npm run build",
    "build:comments": "cd packages/crapify-comments && npm run build",
    "dev": "lerna run dev --parallel",
    "clean": "lerna run clean --parallel && rm -rf dist",
    "test": "lerna run test",
    "prepublish": "npm run clean && npm run build",
    "publish": "lerna publish",
    "version:patch": "lerna version patch",
    "version:minor": "lerna version minor",
    "version:major": "lerna version major"
  },
  "keywords": [
    "cli",
    "developer-tools",
    "code-cleanup",
    "productivity",
    "comments",
    "typescript",
    "monorepo"
  ],
  "author": "kafked",
  "license": "MIT",
  "homepage": "https://crapify.me",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kafk3d/crapify.git"
  },
  "bugs": {
    "url": "https://github.com/kafk3d/crapify/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "lerna": "^8.2.3",
    "typescript": "^5.9.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
